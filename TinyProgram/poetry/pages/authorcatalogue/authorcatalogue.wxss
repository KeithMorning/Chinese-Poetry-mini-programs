page {
  height:100%;
}

.font-size-small{
  font-size: 12px;
  font-weight: 300;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;  
}

.font-size-author{
  font-size: 26px;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif
}

.item_1 {
  width: 100%;
  flex-direction: row;
  display: flex;
}

.item_2 {
  display: flex;
  align-items: center;
  color:#777;
}

.match_parent {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.item_3 {
  /* align-items: center; */
  width: 60rpx;
  height: 60rpx;
  margin: 5rpx 20rpx;
}

.item_4 {
  width: 100%;
  height: 40rpx;
}

.item_5 {
  margin-top: 8rpx;
}

.item_6 {
  margin-top: 13rpx;
}

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}

.text-line{
    font-size: 12px;
    font-weight: 300;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; 
    line-height: 40rpx;
    height: 120rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
}