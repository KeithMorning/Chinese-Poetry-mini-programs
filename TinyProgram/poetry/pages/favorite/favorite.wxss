page {
  height:100%;
}

.font-size-small{
  font-size: 12px;
  font-weight: 300;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;  
}

.font-size-author{
  font-size: 26px;
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif
}

.item_1 {
  width: 100%;
  display: flex;
  padding-top: 10px;
  padding-bottom: 10px;
  align-items: center;
}

.match_parent {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.item_3 {
  /* align-items: center; */
  width: 60rpx;
  height: 60rpx;
}

.item_5 {
  margin-top: 8rpx;
  margin-bottom: 10px;
}

.authorname {
  color: #090909;
  font-family: "微软雅黑";
  font-size: 15pt;
  line-height: 20px;
  display: block; /*内联对象需加*/
  width: 600rpx;
  word-break: keep-all; /* 不换行 */
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow: ellipsis; /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}
